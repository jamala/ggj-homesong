function songs()
	//compile list of notes
	for i = 0, 3 do
		if btnd(i) then
			add(notes,i)
		end
	end
	
	//compare to songs
	// (matching song id
	//  stored in 'match')
	for i = 1, #songlist do 
		local m = true
		local c = 0
		if #notes > 0 then
  	for j = 1, #notes do
  	 c+=1
  		if notes[j] != songlist[i][j] then
  			m = false
  		end 
 	 end
		if m and c == #songlist[i] then 
			match = i
		end
		end
	end
end

function get_speed(sfx)
  return peek(0x3200 + 68*sfx + 65)
end

function set_speed(sfx, speed)
  poke(0x3200 + 68*sfx + 65, speed)
end

function setvol(sfx, vol)
  local addr = 0x3200 + 68*sfx
  for offset=0,31 do
  	note_addr=addr+(offset*2+1)
  	note=peek(note_addr)
  	if note>0 then
    note_altered=bor(band(note,241),shl(vol,1))
    poke(note_addr,note_altered)
  	end
  end
end

function play_outside_theme(speed)
 music(-1)
 for ch=4,7 do
 	set_speed(ch,speed)
 end
 music(0)
end

function musiclow()
 setvol(4,1)
 setvol(5,1)
 setvol(6,0)
 setvol(7,0)
end

function musichigh()
 setvol(4,7)
 setvol(5,3)
 setvol(6,3)
 setvol(7,2)
end
