function _init()
	singing = false
	vol_low = false
	songlist =
	{
 	{0,1,2,3},
 	{0,0,0,0}
	}
	match = nil
	play_outside_theme(64)
end

function _update()
	if singing and not vollow then
		musiclow()
		vollow=true
	elseif not singing and vollow then
		musichigh()
		vollow=false
	end
	
	if btn(4) then
 	singing = true
 	
 	if btn(0) then
 		sfx(0,0)
 	end
 	if btn(1) then
 		sfx(1,0)
 	end
 	if btn(2) then
 		sfx(2,0)
 	end
 	if btn(3) then
 		sfx(3,0)
 	end
 	
		songs()
	else
		singing = false
		notes = {}
		match = nil
	end
end

function _draw()
 cls()
 print ("matching song: ",0,40,10)
 print (match,60,40,10)
 for i = 1,#notes do
 	print(notes[i], 0, 40+10*i, 12)
 end
end
